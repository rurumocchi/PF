<div class="container" style="margin-bottom: 20px;">
  <div class = "row">
    <div class = "col-sm-10 offset-2">
      <h2 class = "title-heading mt-5 ml-3">新規会員登録</h2>

        <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-group mt-5">
            <%= f.label :アカウント名,class:"col-4 ml-3 mt-2" %><br />
            <%= f.text_field :name, autofocus: true,class: "form-control-static col-3 ml-5 mt-2" %>
          </div>

          <div class="form-group mt-3">
            <%= f.label :メールアドレス,class:"col-4 ml-3 mt-2" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control-static col-3 ml-5 mt-2" %>
          </div>

          <div class="form-group mt-3">
            <%= f.label :パスワード,class:"col-4 ml-3 mt-2" %>
            <br />
            <%= f.password_field :password, autocomplete: "new-password",class: "form-control-static col-3  ml-5 mt-2" %>
          </div>

          <div class="form-group mt-3">
            <%= f.label :確認パスワード,class:"col-4 ml-3 mt-2" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control-static col-3  ml-5 mt-2" %>
          </div>
          <div class="actions text-left ml-5" >
            <button class="btn btn-entry">新規登録</button>
            <% f.submit %>
          </div>
        <% end %>
        <div class = "text-left ml-5 mt-3">
        <h6>既に登録済みの方<%= render "devise/shared/links" %></h6>
      </div>
    </div>
  </div>
</div>

