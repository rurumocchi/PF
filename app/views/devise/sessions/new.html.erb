<div class = "container">
  <div class = "row">
    <div class = "col-sm-10 offset-2">
      <h2 class = "title-heading mt-5 ml-3">ログイン</h2>

      <%= form_with model: @user, url: user_session_path, local: true do |f| %>
        <div class="form-group mt-5">
          <%= f.label :メールアドレス,class:"col-4 ml-3 mt-2" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control-static col-3 ml-5 mt-2" %>
        </div>

        <div class="form-group mt-3">
          <%= f.label :パスワード,class:"col-4 ml-3 mt-2"%><br />
          <%= f.password_field :password, autocomplete: "current-password",class: "form-control-static col-3 ml-5 mt-2" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group ">
            <%= f.check_box :remember_me,class:" ml-3 mt-2" %>
            <%= f.label :remember_me,class:"col-4 ml-3 mt-2" %>
          </div>
        <% end %>
      <div class="actions text-left ml-5" >
        <button class="btn btn-entry">ログイン</button>
        <% f.submit %>
      </div>
      <% end %>
      <div>
        <h6 class="mt-3">会員登録がお済みではない方 <br><%= render "devise/shared/links" %></h6>
      </div>
    </div>
  </div>
</div>

