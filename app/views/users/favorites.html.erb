    <div class = "col-md-3 border-info" style="margin-top:100px;">
      <%= render 'users/info', user: @user %>
    </div>
    <div class='col-md-8 offset-md-1' style="margin-top:80px;">
      <div>
        <div class = "index">
          <%= link_to 'いいねしたお題一覧', odai_favorites_user_path(@user), class: "index_btn" %>
