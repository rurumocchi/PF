<div class = "container">
  <div  class = "row">
    <div class = "col-md-3" style="margin-top:150px;">
      <%= render 'users/info', user: current_user %>
      <div class = "row">
        <% if current_user != @user %>
          <% if current_user.following?(@user) %>
            <%= link_to  user_relationships_path(@user.id), method: :delete,class:"btn btn-outline-secondary btn-block pt-3 mt-3" do %>
              <p><%= @user.name %>のフォロー外す</p>
            <% end %>
          <% else %>
            <%= link_to user_relationships_path(@user.id), method: :post,class:"btn btn-outline-secondary btn-block pt-3 mt-3" do %>
              <p><%= @user.name %>をフォローする</p>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class='col-md-8 offset-md-1' style="margin-top:150px;">
      <% @ogiris.each do |ogiri| %>
        <div class = "border col-md-11 offset-md-1 mb-3">
          <div class = "mt-2">
            <%= link_to user_path(ogiri.user) do %>
              <%= attachment_image_tag(ogiri.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
            <% end %>
          </div>
          <div>
            <%= link_to user_path(ogiri.user) do %>
              <%= ogiri.user.name %>
            <% end %>
          </div>
          <div class = "text-center">
            <a class = "oguri-image"><%= attachment_image_tag(ogiri, :image, :fill, 400, 200, fallback: "no_image.jpg") %></a>
              <h2>解答：<%= ogiri.answer %></h2>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>