<div class = "container px-5 px-sm-0">
  <div class = "row">
    <div class = "col-md-3 border-info" style="margin-top:100px;">
      <!--詳細ページに飛んだ、ユーザ情報を表示-->
      <%= render 'users/info', user: @user %>
    </div>
    <div class='col-md-8 offset-md-1' style="margin-top:80px;">
      <div>
        <div class = "index">
          <%= link_to 'いいねした大喜利投稿一覧', favorites_user_path(@user), class: "index_btn" %>
          <%= link_to 'いいねした回答一覧', answer_favorites_user_path(@user), class: "index_btn" %>
        </div>
        <h3 class = "title-index mb-4">いいねしたお題一覧</h3>
      </div>
        <!--ユーザがいいねしたお題一覧表示-->
        <%= render partial: "ogiri_odais/ogiri_odai", collection: @favorite_odais %>
    </div>
  </div>
</div>