<div class = "container px-5 px-sm-0">
  <div class = "row">
    <div class = "col-md-3 border-info" style="margin-top:100px;">
      <!--ログインしたユーザ情報-->
      <%= render 'users/info', user: current_user %>
    </div>
    <div class = 'col-md-7 offset-md-1'style="margin-top:80px;">
    <h3 class = "title-index mb-4">Follower Users</h3>
      <!--もしフォローされているユーザが存在するのであれば、その情報を映し出す-->
      <% if @users.exists? %>
        <% @users.each do |user| %>
          <table class = "table table-bordered">
            <tr>
              <th colspan="2">
                <%= link_to user_path(user) do %>
                  <%= attachment_image_tag(user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %>
                <% end %>
              </th>
            </tr>
            <tr>
	            <th class = "th">name</th>
	            <td class = "td">
	              <%= link_to user_path(user) do %>
                 <%= user.name %>
                <% end %>
	            </td>
            </tr>
            <tr>
              <th class = "th">follows</th>
              <td class = "td">
                <%= link_to user_followings_path(user) do %>
                 <%= user.followings.count %>
                <% end %>
              </td>
            </tr>
            <tr>
              <th class = "th">followers</th>
              <td class = "td">
                <%= link_to user_followers_path(user) do %>
                  <%= user.followers.count %>
                <% end %>
              </td>
            </tr>
            <tr>
              <th class = "th">introduction</th>
	            <td class = "introduction ml-2"><%= user.introduction %></td>
            </tr>
          </table>
        <% end %>
      <!--もしフォロワーがいなければ-->
      <% else %>
        <p>フォローされているユーザーはいません</p>
      <% end %>
    </div>
  </div>
</div>