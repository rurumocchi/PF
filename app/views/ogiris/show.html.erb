<div class = "container">
  <div class = "row">
    <div class = "col-md-3" style="margin-top:150px;">
      <%= render 'users/info', user: current_user %>
    </div>
    <div class='col-md-8 offset-md-1' style="margin-top:100px;">
      <div class = "border col-md-11 offset-md-1 mb-3">
        <div class = "mt-2">
          <%= link_to user_path(@ogiri.user) do %>
            <%= attachment_image_tag(@ogiri.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
          <% end %>
        </div>
        <div>
          <%= link_to user_path(@ogiri.user) do %>
            <%= @ogiri.user.name %>
          <% end %>
        </div>
        <div class = "text-center">
          <a class = "oguri-image"><%= attachment_image_tag(@ogiri, :image, :fill, 400, 200, fallback: "no_image.jpg") %></a>
            <h2>解答：<%= @ogiri.answer %></h2>
        </div>
        <div>
          <% if @ogiri.user == current_user %>
            </%= link_to 'Edit', edit_ogiri_path(@ogiri), class: "btn btn-sm btn-success" %>
            <%= link_to 'Destroy', ogiri_path(@ogiri), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>