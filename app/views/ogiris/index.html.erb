<div class = "container px-5 px-sm-0">
  <div class = "row">
    <div class = "col-md-3" style="margin-top:150px;">
      <%= render 'users/info', user: current_user %>
    </div>
      <div class='col-md-8 offset-md-1'style="margin-top:150px;">
        <% @ogiris.each do |ogiri| %>
          <div class = "border col-md-11 offset-md-1 mb-3">
            <div class = "mt-2">
              <%= link_to user_path(ogiri.user) do %>
                <%= attachment_image_tag(ogiri.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
              <% end %>
            </div>
            <div>
              <%= link_to user_path(ogiri.user) do %>
               <%= ogiri.user.name %>
              <% end %>
            </div>
            <div class = "text-center">
              <a class = "oguri-image">
                <%= link_to ogiri_path(ogiri) do %>
                  <%= attachment_image_tag(ogiri, :image, :fill, 400, 200, fallback: "no_image.jpg") %>
                <% end %>
              </a>
              <%= link_to ogiri_path(ogiri) do %>
                解答：<%= ogiri.answer %>
              <% end %>
            </div>
            <div>

            </div>
          </div>
        <% end %>
      </div>
  </div>
</div>