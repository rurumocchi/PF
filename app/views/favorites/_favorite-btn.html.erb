<% if ogiri.favorited_by?(current_user) %>
  <%= link_to ogiri.favorites.count, ogiri_favorites_path(ogiri), method: :delete, remote: true, class: "fas fa-heart heart_red unlike-btn" %>
<% else %>
  <%= link_to ogiri.favorites.count, ogiri_favorites_path(ogiri), method: :post, remote: true, class: "fas fa-heart heart_blue like-btn" %>
<% end %>