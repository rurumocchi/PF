<div class = "container px-5 px-sm-0">
  <div class = "row">
    <div class = "col-md-3 border-info" style="margin-top:100px;">
      <%= render 'users/info', user: current_user %>
    </div>
    <div  class='col-md-8 offset-md-1'style="margin-top:100px;">
      <% @ogiri_odais.each do |ogiri| %>
      <div class = "border col-md-11 offset-md-1 mb-3">
        <div class = "mt-2">
          <%= link_to user_path(ogiri.user) do %>
            <%= attachment_image_tag(ogiri.user, :profile_image, :fill, 50, 50, fallback: "no-image-icon.jpg") %>
          <% end %>
        </div>
        <div class = "name">
          <%= link_to user_path(ogiri.user) do %>
            <%= ogiri.user.name %>
          <% end %>
        </div>
        <div class = "text-center">
          
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>