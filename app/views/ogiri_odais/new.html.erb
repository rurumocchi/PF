<div class = "container px-5 px-sm-0">
  <div class = "row">
    <div class = "col-md-3 border-info" style="margin-top:100px;">
      <%= render 'users/info', user: current_user %>
    </div>
    <div class = "col-md-8 offset-md-1" style="margin-top:100px;">
      <h3>新規お題投稿</h3>
      <%= form_with model:@ogiri_odai, local:true do |f| %>
        <div class = "form-group">
          <%= f.radio_button :ogiri_odai_select, "select_image", checked: true %>
          <%= f.label :"画像" %>
          <%= f.attachment_field :odai_image, class: "form-control-file" %>
        </div>
        <div class = "form-group">
          <%= f.radio_button :ogiri_odai_select, "select_ogiri" %>
          <%= f.label :"お題" %>
          <%= f.text_field :odai_text, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :category %>
          <%= f.select :genre_name, [['写真で一言'], ['画像でボケて'],['お題で一言'], ['その他']], { include_blank: '選択してください'}, { string: "genre_name",class: "user_class" } %>
        </div>
        <div class="form-group">
          <%= f.submit '投稿する', class: 'btn btn-secondary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>